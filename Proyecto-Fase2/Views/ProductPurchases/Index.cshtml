@model IEnumerable<Proyecto_Fase2.Models.ProductPurchase>

@{
    ViewBag.Title = "Index";
}

<h2>Facturas de ventas</h2>

<p>
    @Html.ActionLink("Agregar factura", "Create", "ProductPurchases", new { @class="btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LatePayment.TypeIncrement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.Credentials)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateLimit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalAmount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LatePayment.TypeIncrement)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Users.Credentials)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateLimit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalAmount)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
