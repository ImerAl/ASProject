@model IEnumerable<Proyecto_Fase2.Models.ProductPurchase>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Compras</h2>

<p>
    @Html.ActionLink("Ingresar Compra", "Create", "ProductPurhcases", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LatePayment.TypeIncrement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.Credentials)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateLimit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalAmount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LatePayment.TypeIncrement)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Users.Credentials)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateLimit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalAmount)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id }, new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
