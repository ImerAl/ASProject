@model IEnumerable<Proyecto_Fase2.Models.LatePayment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    // new { @class = "btn btn-primary" }
}

<h2>Pagos Tardios</h2>

<p>
    @Html.ActionLink("Insertar", "Create", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Increment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeIncrement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DaysForIncrement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LateDayPayment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Increment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeIncrement)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DaysForIncrement)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LateDayPayment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id }, new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
