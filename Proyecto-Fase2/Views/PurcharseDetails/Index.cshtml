@model IEnumerable<Proyecto_Fase2.Models.PurcharseDetails>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Detalles de Compras</h2>

<p>
    @Html.ActionLink("Insertar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductPurchase.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SuplyProduct.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantityBuyed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductPurchase.status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SuplyProduct.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuantityBuyed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
